{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Aegis Vault",
  "version": "0.2.2",
  "identifier": "com.leonardoreis.aegisvault",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Aegis Vault",
        "width": 1280,
        "height": 720,
        "minWidth": 1280,
        "minHeight": 720,
        "decorations": false,
        "transparent": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
